@model prototipo2.Models.Venta

@{
    ViewData["Title"] = "Nueva Venta";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Nueva Venta</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label>Productos</label>
        <table class="table">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>Precio Unitario</th>
                    <th>Método de Pago</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <input name="Productos[0].Producto" class="form-control" />
                        <span asp-validation-for="Productos[0].Producto" class="text-danger"></span>
                    </td>
                    <td>
                        <input name="Productos[0].Cantidad" type="number" min="1" class="form-control" />
                        <span asp-validation-for="Productos[0].Cantidad" class="text-danger"></span>
                    </td>
                    <td>
                        <input name="Productos[0].PrecioUnitario" type="number" step="0.01" min="0" class="form-control" />
                        <span asp-validation-for="Productos[0].PrecioUnitario" class="text-danger"></span>
                    </td>
                    <td>
                        <select name="Pagos[0].Tipo" class="form-select">
                            <option value="EFECTIVO">Efectivo</option>
                            <option value="TARJETA">Tarjeta</option>
                            <option value="SINPE">SINPE</option>
                        </select>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <button type="submit" class="btn btn-success">Guardar Venta</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
