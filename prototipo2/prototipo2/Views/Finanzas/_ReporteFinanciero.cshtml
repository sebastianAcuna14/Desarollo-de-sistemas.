@model prototipo2.Models.ReporteFinanciero

<div class="card mt-3 shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i>Reporte Financiero</h5>
    </div>
    <div class="card-body">
        <p><strong>Total Ingresos:</strong> @Model.TotalIngresos.ToString("C")</p>
        <p><strong>Total Egresos:</strong> @Model.TotalEgresos.ToString("C")</p>
        <p><strong>Cuentas por Cobrar:</strong> @Model.TotalCuentasPorCobrar.ToString("C") (@Model.CantPendientes pendientes)</p>
        <p><strong>Cuentas Vencidas:</strong> @Model.TotalCuentasPorCobrarVencidas.ToString("C") (@Model.CantPendientesVencidas vencidas)</p>
    </div>
    <div class="mt-3 text-end">
        <a asp-action="ExportarReporteExcel" class="btn btn-outline-success">
            <i class="fas fa-file-excel"></i> Exportar Reporte Excel
        </a>
    </div>

</div>
