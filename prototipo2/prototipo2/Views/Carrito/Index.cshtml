@model List<prototipo2.Models.CarritoDTO>

@{
    ViewData["Title"] = "Carrito de Compras - ElectroMecánica";
}

@{
    var totalProductos = Model.Sum(x => x.Cantidad);
    var totalPrecio = Model.Sum(x => x.Subtotal);
}


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>

    <div class="container mt-5">
        <h2 class="mb-4 text-primary">
            <i class="fas fa-shopping-cart me-2"></i>Carrito de Compras
        </h2>

        @if (Model != null && Model.Count > 0)
        {
            <div class="row">
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-body">
                            @foreach (var item in Model)
                            {
                                <div class="border-bottom pb-3 mb-3 cart-item">
                                    <div class="row align-items-center">
                                        <div class="col-md-6">
                                            <strong>@item.Nombre_Producto</strong><br />
                                            <small>Código: @item.Id</small>
                                        </div>
                                        <div class="col-md-2">
                                            <form asp-controller="Carrito" asp-action="ActualizarCantidad" method="post" class="d-flex align-items-center gap-1">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" name="action" value="decrease" class="btn btn-outline-secondary btn-sm">
                                                    <i class="fas fa-minus"></i>
                                                </button>
                                                <input type="text" readonly class="form-control form-control-sm text-center" style="width: 40px;" value="@item.Cantidad" />
                                                <button type="submit" name="action" value="increase" class="btn btn-outline-secondary btn-sm">
                                                    <i class="fas fa-plus"></i>
                                                </button>
                                            </form>
                                        </div>
                                        <div class="col-md-2 text-center fw-bold">
                                            ₡@item.Precio.ToString("N2")
                                        </div>
                                        <div class="col-md-1 text-center fw-bold text-success">
                                            ₡@item.Subtotal.ToString("N2")
                                        </div>
                                        <div class="col-md-1 text-center">
                                            <form asp-controller="Carrito" asp-action="Eliminar" method="post">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-danger btn-sm" title="Eliminar producto">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                            <div class="d-flex justify-content-between mt-3">
                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-warning">
                                    <i class="fas fa-arrow-left me-2"></i> Seguir Comprando
                                </a>
                                <form asp-controller="Carrito" asp-action="Vaciar" method="post" onsubmit="return confirm('¿Seguro que quieres vaciar el carrito?');">
                                    <button type="submit" class="btn btn-outline-danger">
                                        <i class="fas fa-trash me-2"></i> Vaciar Carrito
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-header bg-warning">
                            <h5 class="mb-0">
                                <i class="fas fa-receipt me-2"></i>Resumen del Pedido
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Subtotal (@totalProductos productos):</span>
                                <span>₡@totalPrecio.ToString("N2")</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Envío:</span>
                                <span>₡0.00</span>
                            </div>
                            <hr />
                            <div class="d-flex justify-content-between fw-bold h5">
                                <span>Total:</span>
                                <span class="text-warning">₡@totalPrecio.ToString("N2")</span>
                            </div>

                        </div>
                    </div>

                    <a asp-controller="Carrito" asp-action="Paypal" class="btn btn-warning btn-lg w-100 mb-3">
                        <i class="fas fa-credit-card me-2"></i>Proceder al Pago
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-cart-arrow-down" style="font-size: 6rem; color:#ffc107;"></i>
                <h3 class="mt-3 text-warning">¡Tu carrito está vacío!</h3>
                <p class="text-muted">Agrega productos para poder realizar una compra.</p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-arrow-left me-2"></i> Volver al Catálogo
                </a>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
