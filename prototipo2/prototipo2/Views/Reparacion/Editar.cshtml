@model prototipo2.Models.Reparacion

@{
    ViewData["Title"] = "Editar Reparación";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row justify-content-center">
    <div class="container-sm py-3 col-11">

        <div class="card shadow rounded-4 p-4 mt-4">
            <div class="card-body">
                <h2 class="card-title mb-4 text-primary">@ViewData["Title"]</h2>

                <form asp-action="Editar" method="post">
                    <input type="hidden" asp-for="IdReparacion" />

                    <div class="mb-3">
                        <label asp-for="Fecha_Ingreso" class="form-label">Fecha de Ingreso</label>
                        <input asp-for="Fecha_Ingreso" class="form-control" type="date" />
                        <span asp-validation-for="Fecha_Ingreso" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Fecha_Salida" class="form-label">Fecha de Salida</label>
                        <input asp-for="Fecha_Salida" class="form-control" type="date" />
                        <span asp-validation-for="Fecha_Salida" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descripcion" class="form-label">Descripción</label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Estado" class="form-label">Estado</label>
                        <select asp-for="Estado" class="form-select">
                            <option value="">-- Seleccione --</option>
                            <option value="En proceso">En proceso</option>
                            <option value="Completada">Completada</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>

                    @* <div class="mb-3">
                        <label asp-for="IdCliente" class="form-label">Cédula del Cliente</label>
                        <input asp-for="IdCliente" class="form-control" />
                        <span asp-validation-for="IdCliente" class="text-danger"></span>
                    </div> *@

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-success">Guardar Cambios</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



