@model IEnumerable<prototipo2.Models.Proveedor>

@{
    ViewData["Title"] = "Lista de Proveedores";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row justify-content-center">
    <div class="container-sm py-3 col-11">

        <h1 class="mb-4">@ViewData["Title"]</h1>

        <a asp-controller="Proveedor" asp-action="Crear" class="btn btn-primary mb-3">
            <i class="fas fa-plus-circle me-2"></i>Agregar Proveedor
        </a>

        <div class="card mt-4 shadow-sm rounded-4">
            <div class="card-body">
                <table class="table table-striped" id="datatablesSimple" style="width:100%">
                    <thead class="table-secondary">
                        <tr>
                            <th>Empresa</th>
                            <th>Correo</th>
                            <th>Teléfono</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.NombreEmpresa</td>
                                    <td>@item.Correo</td>
                                    <td>@item.Telefono</td>
                                    <td>@item.Estado</td>
                                    <td>
                                        <a asp-controller="Proveedor"
                                           asp-action="Editar"
                                           asp-route-id="@item.IDProveedor"
                                           class="btn btn-warning btn-sm">Editar</a>

                                        <a asp-controller="Proveedor"
                                           asp-action="Consultar"
                                           asp-route-id="@item.IDProveedor"
                                           class="btn btn-info btn-sm">Ver</a>

                                        <a asp-controller="Proveedor"
                                           asp-action="Eliminar"
                                           asp-route-id="@item.IDProveedor"
                                           class="btn btn-danger btn-sm">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">No hay proveedores registrados.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js"></script>
    <script src="~/js/Proveedor.js"></script>
}
