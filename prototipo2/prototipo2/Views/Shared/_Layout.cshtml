<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - prototipo2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/prototipo2.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
	<link href="~/css/Styles.css" rel="stylesheet" />
  
</head>
<body>
    <header class="bg-dark text-white py-3">
       
            <div class="container">

            <div class="row align-items-center">
                <div class="col-lg-3 mb-3 mb-lg-0 text-center text-lg-start">
                    <a class="text-white text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">
                   
                        
                        <h1 class="h3 mb-0 text-white d-flex align-items-center justify-content-center justify-content-lg-start">
                            <i class="fas fa-cogs me-2 text-warning"></i>
                            <span>ElectroMecánica</span>

                        </h1>
                    </a>
                 
                </div>
                <div class="col-lg-5 mb-3 mb-lg-0">
                    <form class="d-flex">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Buscar productos...">
                           
                            <button class="btn btn-warning" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                        <div class="position-absolute top-0 end-0 mt-3 me-5" >
                            @* <div class="dropstart"> *@
                                <a href="#" class="text-white dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user"></i>
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-controller="Login" asp-action="Recuperar">Cambiar Contraseña</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" asp-controller="Usuario" asp-action="CerrarSesion">Cerrar Sesión</a></li>
                                </ul>
                            </div>
                    </form>
                        </div>

                    
                
               

            </div>
            </div>
       
    </header>
    @RenderBody()

@*     <div class="container">
        <main role="main" class="pb-3">
           
        </main>
    </div> *@

    <footer class="bg-dark text-white py-5">
        <div class="container">
            <div class="row g-4">

                <!-- Enlaces Rápidos -->
                <div class="col-lg-4 col-md-6 text-center text-md-start">
                    <h5 class="mb-3">Enlaces Rápidos</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="index.html" class="text-decoration-none text-white-50">Inicio</a></li>
                        <li class="mb-2"><a href="catalogo.html" class="text-decoration-none text-white-50">Catálogo</a></li>
                        <li class="mb-2"><a href="envios.html" class="text-decoration-none text-white-50">Envíos</a></li>
                        <li class="mb-2"><a href="contacto.html" class="text-decoration-none text-white-50">Contacto</a></li>
                    </ul>
                </div>

                <!-- Contáctenos -->
                <div class="col-lg-4 col-md-6 text-center text-md-start">
                    <h5 class="mb-3">Contáctenos</h5>
                    <p class="text-white-50 mb-2"><i class="fas fa-phone-alt me-2"></i>(506) 2257-5716</p>
                    <p class="text-white-50 mb-2"><i class="fab fa-whatsapp me-2"></i>(506) 8955-1997</p>
                    <p class="text-white-50 mb-2"><i class="fas fa-envelope me-2"></i>servicioalcliente@aplecsa.com</p>
                </div>

                <!-- Ubícanos -->
                <div class="col-lg-4 col-md-12 text-center text-md-start">
                    <h5 class="mb-3">Ubícanos</h5>
                   
                    <p class="text-white-50 mb-0">
                        <i class="fa-solid fa-city me-2"></i>
                        San José, Costa Rica
                    </p>
                    <p class="text-white-50 mb-2">
                        <i class="fa-solid fa-location-dot me-2"></i>
                        Paseo Colón, de Torre Mercedez 200 m norte y 25 m este
                    </p>
                </div>

            </div>

            <hr class="my-4 border-secondary">

            <div class="text-center text-white-50 small">
                <p>&copy; <span id="current-year"></span> ElectroMecánica. Todos los derechos reservados.</p>
            </div>
        </div>
    </footer>


   
</body>
</html>
