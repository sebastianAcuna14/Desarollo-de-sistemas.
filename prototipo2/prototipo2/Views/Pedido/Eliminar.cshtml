@model prototipo2.Models.Pedido

@{
    ViewData["Title"] = "Eliminar pedido";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm rounded-4 border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="fas fa-trash-alt me-2"></i>Eliminar pedido</h4>
        </div>
        <div class="card-body">
            <p class="fs-5 mb-4 text-danger">¿Está seguro que desea eliminar el siguiente pedido?</p>

            <dl class="row">
                <dt class="col-sm-4">Número de Pedido:</dt>
                <dd class="col-sm-8">@Model.Numero_Pedido</dd>

                <dt class="col-sm-4">Nombre del Producto:</dt>
                <dd class="col-sm-8">@Model.Nombre_Producto</dd>

                <dt class="col-sm-4">Cantidad:</dt>
                <dd class="col-sm-8">@Model.Cantidad</dd>

                <dt class="col-sm-4">Precio:</dt>
                <dd class="col-sm-8">@Model.Precio.ToString("C")</dd>

                <dt class="col-sm-4">Fecha del Pedido:</dt>
                <dd class="col-sm-8">@Model.FechaPedido.ToShortDateString()</dd>

                <dt class="col-sm-4">Estado:</dt>
                <dd class="col-sm-8">@Model.Estado</dd>

            </dl>

            <form asp-action="EliminarPedido" method="post" class="d-flex justify-content-end">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="fas fa-trash-alt me-1"></i>Eliminar
                </button>
                <a asp-action="Index" asp-controller="Pedido" class="btn btn-secondary">
                    <i class="fas fa-times me-1"></i>Cancelar
                </a>
            </form>
        </div>
    </div>
</div>
