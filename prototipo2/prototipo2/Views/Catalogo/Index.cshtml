@model List<prototipo2.Models.Producto>
@{
    ViewData["Title"] = "Catálogo";
    Layout = "_Layout";
}

<!-- Encabezado del Catálogo -->
<section class="py-4 hero">
    <div class="container">
        <h1 class="mb-4">Catálogo de Productos</h1>
        <div class="row g-3">
            <div class="col-md-8">
                <div class="input-group">
                    <span class="input-group-text bg-white">
                        <i class="fas fa-search text-muted"></i>
                    </span>
                    <input type="text" class="form-control" placeholder="Buscar productos...">
                </div>
            </div>
            <div class="col-md-4">
                <select class="form-select">
                    <option selected>Ordenar por</option>
                    <option value="price-asc">Precio: Menor a Mayor</option>
                    <option value="price-desc">Precio: Mayor a Menor</option>
                    <option value="name-asc">Nombre: A-Z</option>
                    <option value="name-desc">Nombre: Z-A</option>
                </select>
            </div>
        </div>
    </div>
</section>

<!-- Contenido Principal -->
<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <!-- Sidebar de Filtros -->
            <div class="col-lg-3">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="card-title mb-0">Filtros</h5>
                            <button class="btn btn-sm btn-link text-decoration-none p-0">Limpiar</button>
                        </div>

                        <!-- Categorías -->
                        <div class="mb-4">
                            <h6 class="fw-bold mb-2">Categorías</h6>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" id="cat-motores">
                                <label class="form-check-label" for="cat-motores">Motores</label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" id="cat-bombas">
                                <label class="form-check-label" for="cat-bombas">Bombas</label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" id="cat-compresores">
                                <label class="form-check-label" for="cat-compresores">Compresores</label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" id="cat-generadores">
                                <label class="form-check-label" for="cat-generadores">Generadores</label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" id="cat-soldadoras">
                                <label class="form-check-label" for="cat-soldadoras">Soldadoras</label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" id="cat-herramientas">
                                <label class="form-check-label" for="cat-herramientas">Herramientas</label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" id="cat-electronica">
                                <label class="form-check-label" for="cat-electronica">Electrónica</label>
                            </div>
                        </div>

                        <button class="btn btn-warning w-100">Aplicar Filtros</button>
                    </div>
                </div>
            </div>

            <!-- Productos -->
            <div class="col-lg-9">
                <div class="row g-4">
                    @foreach (var producto in Model)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 border-0 shadow-sm">
                                <img src="https://via.placeholder.com/300x200?text=@producto.Nombre" class="card-img-top" alt="@producto.Nombre">
                                <div class="card-body">
                                    <span class="badge bg-warning text-dark mb-2">@producto.NombreCategoria</span>
                                    <h5 class="card-title">@producto.Nombre</h5>
                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <span class="fw-bold text-warning">@producto.Precio.ToString("C")</span>
                                        <form method="post" asp-controller="Carrito" asp-action="Agregar" class="m-0">
                                            <input type="hidden" name="ProductoId" value="@producto.IdProducto" />
                                            <input type="hidden" name="Nombre_Producto" value="@producto.Nombre" />
                                            <input type="hidden" name="Precio" value="@producto.Precio" />
                                            <input type="hidden" name="Cantidad" value="1" />
                                            <button type="submit" class="btn btn-sm btn-warning">
                                                Agregar
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

