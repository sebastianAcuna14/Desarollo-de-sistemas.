@model List<prototipo2.Models.CarritoDTO>

@{
    ViewData["Title"] = "Carrito de Compras";
}

<div class="container my-5" style="max-width: 900px;">
    <h2 class="text-center mb-4 fw-bold text-primary">
        <i class="bi bi-cart4 me-2"></i> Carrito de Compras
    </h2>

    @if (Model != null && Model.Count > 0)
    {
        <div class="card shadow-lg rounded-4 border-0">
            <div class="card-body p-4">
                <table class="table align-middle mb-0 table-hover">
                    <thead class="table-primary text-center rounded-top">
                        <tr>
                            <th>Producto</th>
                            <th>Categoría</th>
                            <th>Proveedor</th>
                            <th>Precio Unitario</th>
                            <th>Cantidad</th>
                            <th>Subtotal</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="text-center">
                                <td class="text-start">
                                    <strong>@item.Nombre_Producto</strong>
                                </td>
                                <td>-</td>
                                <td>-</td>
                                <td>₡@item.Precio.ToString("N2")</td>
                                <td>
                                    <span class="badge bg-info text-dark fs-6 px-3 py-2 rounded-pill">
                                        @item.Cantidad
                                    </span>
                                </td>
                                <td class="fw-semibold text-success">₡@item.Subtotal.ToString("N2")</td>
                                <td>
                                    <form asp-controller="Carrito" asp-action="Eliminar" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm d-flex align-items-center gap-1 px-3 py-1 rounded-pill shadow-sm">
                                            <i class="bi bi-trash-fill fs-5"></i> Quitar
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <hr class="my-4" />

                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="fw-bold text-secondary">Total:</h5>
                    </div>
                    <div>
                        <h4 class="text-success fw-bold">
                            ₡@Model.Sum(x => x.Subtotal).ToString("N2")
                        </h4>
                    </div>
                </div>

                <a asp-controller="Carrito" asp-action="Paypal" class="btn btn-success btn-lg w-100 mt-4 fw-bold shadow-sm" style="font-size:1.25rem;">
                    <i class="bi bi-credit-card me-2 fs-4"></i> Proceder al Pago
                </a>

                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary btn-lg w-100 mt-3 fw-bold shadow-sm" style="font-size:1.1rem;">
                    <i class="bi bi-arrow-left me-2 fs-5"></i> Seguir comprando
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="text-center my-5 p-5 border rounded shadow-sm bg-light">
            <i class="bi bi-cart-x" style="font-size: 5rem; color: #dc3545;"></i>
            <h3 class="mt-3 mb-2 text-danger">¡Tu carrito está vacío!</h3>
            <p class="mb-4 text-muted fs-5">Parece que aún no has agregado ningún producto.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="bi bi-arrow-left-circle me-2"></i> Volver al catálogo
            </a>
        </div>
    }
</div>

<style>
    button.btn-outline-danger:hover {
        background-color: #dc3545;
        color: white;
        transition: background-color 0.3s ease;
    }

    table tbody tr:hover {
        background-color: #f0f8ff;
        transition: background-color 0.3s ease;
    }

    .badge {
        font-weight: 600;
    }
</style>


    }
</div>
