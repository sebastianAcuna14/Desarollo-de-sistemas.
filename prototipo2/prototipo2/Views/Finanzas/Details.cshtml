@model prototipo2.Models.MovimientoFinanciero

@{
    ViewData["Title"] = "Editar Movimiento Financiero";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h3 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Editar Movimiento Financiero</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-4">
                    <label asp-for="Descripcion" class="form-label fw-semibold">Descripción</label>
                    <input asp-for="Descripcion" class="form-control rounded-3 shadow-sm" placeholder="Ej. Pago de cliente o Compra de insumos" />
                    <span asp-validation-for="Descripcion" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Monto" class="form-label fw-semibold">Monto</label>
                    <input asp-for="Monto" class="form-control rounded-3 shadow-sm" placeholder="₡0.00" />
                    <span asp-validation-for="Monto" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Tipo" class="form-label fw-semibold">Tipo</label>
                    <select asp-for="Tipo" class="form-select rounded-3 shadow-sm">
                        <option value="INGRESO">Ingreso</option>
                        <option value="EGRESO">Egreso</option>
                        <option value="CUENTA_POR_COBRAR">Cuenta por cobrar</option>
                    </select>
                    <span asp-validation-for="Tipo" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="FechaVencimiento" class="form-label fw-semibold">Fecha de Vencimiento</label>
                    <input asp-for="FechaVencimiento" class="form-control rounded-3 shadow-sm" type="date" />
                    <span asp-validation-for="FechaVencimiento" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success px-4 rounded-3">
                        <i class="bi bi-save me-1"></i> Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-3">
                        <i class="bi bi-x-circle me-1"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
