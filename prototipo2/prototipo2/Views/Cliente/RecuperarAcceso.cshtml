@model Cliente
@{
    ViewData["Title"] = "Recuperar contraseña";
    Layout = "_LayoutLogin";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recuperar Contraseña - ElectroMecánica</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <!-- Barra de navegación -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="index.html">
                <i class="fas fa-cogs me-2"></i>
                <span class="fw-bold">ElectroMecánica</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="index.html">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="catalogo.html">Catálogo</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="envios.html">Envíos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contacto</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <section class="py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card border-0 shadow-lg">
                        <div class="card-body p-4 p-md-5">
                            <div class="text-center mb-4">
                                <i class="fas fa-key text-warning fa-3x mb-3"></i>
                                <h2 class="fw-bold">Recuperar Contraseña</h2>
                                <p class="text-muted">Ingresa tu correo electrónico para recibir instrucciones</p>
                            </div>

                            <form class="form-horizontal m-t-20" asp-controller="Cliente" asp-action="RecuperarAcceso" method="post">
                                <input id="Mensaje" type="hidden" value="@ViewBag.Mensaje" />

                                <div class="mb-4">
                                    <label asp-for="Correo" class="form-label">Correo Electrónico</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light">
                                            <i class="fas fa-envelope text-muted"></i>
                                        </span>
                                        <input asp-for="Correo" class="form-control" placeholder="ejemplo@correo.com" />
                                    </div>
                                    <span asp-validation-for="Correo" class="text-danger"></span>
                                </div>

                                <div class="d-grid gap-2 mb-4">
                                    <button type="submit" class="btn btn-warning btn-lg">Enviar Instrucciones</button>
                                </div>

                                <div class="text-center">
                                    <p class="mb-0">
                                        ¿Recordaste tu contraseña?
                                        <a href="@Url.Action("InicioSesion","Cliente")" class="text-decoration-none text-warning">Iniciar Sesión</a>
                                    </p>
                                    <p class="mb-0">
                                        ¿No tienes cuenta?
                                        <a href="@Url.Action("RegistroCliente","Cliente")" class="text-decoration-none text-warning">Regístrate</a>
                                    </p>
                                </div>
                            </form>

                            @if (ViewBag.Mensaje != null)
                            {
                                <div class="alert alert-success d-flex align-items-center mt-4" role="alert">
                                    <i class="fas fa-check-circle me-2"></i>
                                    <div>
                                        @ViewBag.Mensaje
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }


    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="script.js"></script>
    <script>
        // Form submission
        document.getElementById('recover-form').addEventListener('submit', function(e) {
            e.preventDefault();

            // Ocultar el formulario
            this.style.display = 'none';

            // Mostrar mensaje de éxito
            document.getElementById('success-message').style.display = 'flex !important';
            document.getElementById('success-message').style.removeProperty('display');

            // Aquí iría la lógica para enviar el correo de recuperación
        });
    </script>
</body>
</html>
