@model prototipo2.Models.Categoria

@{
    ViewData["Title"] = "Detalles de la Categoría";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card mt-5 shadow rounded-4">
            <div class="card-header bg-info text-white rounded-top-4">
                <h4 class="mb-0"><i class="fas fa-info-circle me-2"></i>@ViewData["Title"]</h4>
            </div>
            <div class="card-body">

                <dl class="row">
                    <dt class="col-sm-4">Nombre de la Categoría:</dt>
                    <dd class="col-sm-8">@Model.Nombre</dd>

                    <dt class="col-sm-4">Descripción:</dt>
                    <dd class="col-sm-8">@Model.Descripcion</dd>
                </dl>

                <div class="text-end mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">Volver al listado</a>
                </div>
            </div>
        </div>
    </div>
</div>
