@model prototipo2.Models.Empleado

@{
    ViewData["Title"] = "Agregar empleado";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm rounded-4">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0"><i class="fas fa-plus me-2"></i>Agregar nuevo empleado</h4>
        </div>
        <div class="card-body">
            <form asp-action="CrearEmpleado" method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="NombreCompleto" class="form-label">Nombre Completo</label>
                        <input asp-for="NombreCompleto" class="form-control" />
                        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Cedula" class="form-label">Cédula</label>
                        <input asp-for="Cedula" class="form-control" />
                        <span asp-validation-for="Cedula" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Rol" class="form-label">Rol</label>
                        <input asp-for="Rol" class="form-control" />
                        <span asp-validation-for="Rol" class="text-danger"></span>
                    </div>

                    <div class="col-md-3 mb-3">
                        <label asp-for="Salario" class="form-label">Salario</label>
                        <input asp-for="Salario" class="form-control" />
                        <span asp-validation-for="Salario" class="text-danger"></span>
                    </div>

                    <div class="col-md-3 mb-3">
                        <label asp-for="FechaContratacion" class="form-label">Fecha de Contratación</label>
                        <input asp-for="FechaContratacion" class="form-control" type="date" />
                        <span asp-validation-for="FechaContratacion" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-save me-1"></i>Guardar
                    </button>
                    <a asp-action="Index" asp-controller="Empleado" class="btn btn-secondary">
                        <i class="fas fa-times me-1"></i>Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
